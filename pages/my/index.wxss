.wrap {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #F1F1F1;
} 
.avatar {
  display: flex;
  flex: 1;
  align-items: center;
  background: #32CD32;
  padding: 30rpx 30px;
  border-radius: 0;
}
.avatar::after {
  border: none;
} 
.avatar-wrap {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar-img {
  width: 100%;
  height: 100%;
}
.avatar-info {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.info-click {
  color: #ffffff;
  line-height: 1;
  /* font-size: 30rpx; */
}
.info-tip {
  color: #ffffff;
  font-size: 24rpx;
}
.nickname {
  color: #ffffff;
  margin-left: 20rpx;
  font-size: 35rpx;
}
.items {
  margin-top: 20rpx;
  background: #ffffff;
}
.item {
  padding: 36rpx 0;
  margin-left: 40rpx;
  border-bottom: 2rpx solid #EEEEEE;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item:last-child {
  border-bottom: none;
}
.arrow{
  width: 60rpx;
  height: 60rpx;
  float: right;
  padding-top: 20rpx;
}
.item-img {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}
.wrap-top {
  display: flex;
  justify-content: space-between;
  background: #32CD32;
  align-items: center;
}
.jifen {
  margin-right: 40rpx;
  color: #ffffff;
  font-size: 36rpx;
}