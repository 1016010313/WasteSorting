.wrap {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #F1F1F1;
} 
.avatar {
  display: flex;
  align-items: center;
  background: #32CD32;
  padding: 30rpx 30px;
}
.avatar-wrap {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar-img {
  width: 100%;
  height: 100%;
}
.nickname {
  color: #ffffff;
  margin-left: 20rpx;
}
.items {
  margin-top: 20rpx;
  background: #ffffff;
}
.item {
  padding: 10rpx 0;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #EEEEEE;
}
.item:last-child {
  border-bottom: none;
}